layout-macro-def(__MACRO_NAME__) {
  params {
    param (__PARAM_NAME__) {
      type (__CONCEPT__)
      min (Required)
      max (One)
    }
  }

  content {
    section {  // this macro returns a "section"
      content {
        paragraph {
          value ("#{value(__PARAM_NAME__)}")
          style (Detail_M)
        }
      }
    }
  }
}
